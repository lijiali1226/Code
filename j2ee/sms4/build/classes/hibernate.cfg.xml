<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
	<session-factory>
		<property name="connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="connection.url">jdbc:mysql://localhost/sms1?characterEncoding=UTF-8</property>
		<property name="connection.username">test</property>
		<property name="connection.password">123456</property>
		<property name="show_sql">true</property>
		<property name="format_sql">true</property>

		<property name="dialect">org.hibernate.dialect.MySQLDialect</property>
		<property name="jdbc.fetch_size">16</property>
		<property name="jdbc.batch_size">30</property>
		<property name="current_session_context_class">thread</property>

		<mapping class="com.yntravelsky.sms.model.Student" />
		<mapping class="com.yntravelsky.sms.model.Course" />


	</session-factory>
</hibernate-configuration>